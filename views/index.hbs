<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> IMDB Movies </title>
    {{!--
    <link rel="stylesheet" type="text/css" href="/css/index.css"> --}}
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>

    <script type="text/javascript" src="/js/index.js"></script>

</head>

<body>
    <a href="/syncfragment2" hidden><button>Sync Fragment 2</button></a>
    <a href="/syncfragment3" hidden><button>Sync Fragment 3</button></a>
    <a href="/synccentral" hidden><button>Sync Central</button></a>
    <div class="add-movie-section">
        <h2>Add Movie</h2>
        <form method="post" action="/add">
            <input name="title" type="text" placeholder="Title" required>
            <input name="year" type="number" placeholder="Year" required>
            <select name="genre" title="Genre" required>
                <option value="Action">Action</option>
                <option value="Adventure">Adventure</option>
                <option value="Animation">Animation</option>
                <option value="Comedy">Comedy</option>
                <option value="Crime">Crime</option>
                <option value="Documentary">Documentary</option>
                <option value="Drama">Drama</option>
                <option value="Family">Family</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Film-Noir">Film-Noir</option>
                <option value="Horror">Horror</option>
                <option value="Music">Music</option>
                <option value="Musical">Musical</option>
                <option value="Mystery">Mystery</option>
                <option value="Romance">Romance</option>
                <option value="Sci-Fi">Sci-Fi</option>
                <option value="Short">Short</option>
                <option value="Thriller">Thriller</option>
                <option value="War">War</option>
                <option value="Western">Western</option>
            </select>
            <input name="director" type="text" placeholder="Director" required >
            <input name="actor" type="text" placeholder="Actor" required >
            <input type="submit">
    </form>
    </div>

<div class="movies-list-section">
    <h2>Browse Movies</h2>

    <form action="/filter" method="get">
        <input type="number" id="year-filter-from" name="yearFrom" placeholder="From">
        <input type="number" id="year-filter-to" name="yearTo" placeholder="To" >
        <input type="submit">
    </form>

    <table>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Actor</th>
        </tr>

        {{#each movies}}
        <tr>
            <td>{{@index}}</td>
            <td>{{this.title}}</td>
            <td>{{this.year}}</td>
            <td>{{this.genre}}</td>
            <td>{{this.director}}</td>
            <td>{{this.actor}}</td>
            <td>
                <a href="/editMovie?id={{this.id}}&year={{this.year}}"><button>Edit</button></a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
</body>

</html>